<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.client.teacher.TeacherMenuController">
   <children>
      <Hyperlink fx:id="sbTeacherNameLnk" layoutX="14.0" layoutY="14.0" onAction="#LnkTeacherName" text="TeacheName" />
      <Hyperlink fx:id="sbLogoutLnk" layoutX="15.0" layoutY="32.0" onAction="#LnkLogout" text="Logout" />
      <Label fx:id="sbWelcomeLbl" alignment="CENTER" layoutX="167.0" layoutY="21.0" text="Welcome, Teacher!" textAlignment="JUSTIFY" underline="true" AnchorPane.topAnchor="20.0">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <font>
            <Font name="System Bold Italic" size="30.0" />
         </font>
      </Label>
      <VBox layoutX="225.0" layoutY="83.0" prefWidth="150.0" spacing="10.0">
         <children>
            <Button fx:id="sbStartExamBtn" alignment="TOP_CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#btnPressStartExam" prefHeight="25.0" prefWidth="150.0" text="Start Exam" textAlignment="JUSTIFY" />
            <Button fx:id="sbCreateQuestionBtn" contentDisplay="CENTER" mnemonicParsing="false" onAction="#btnPressCreateQuestion" prefHeight="25.0" prefWidth="150.0" text="Create Question" />
            <Button fx:id="sbEditQuestionBtn" contentDisplay="CENTER" mnemonicParsing="false" onAction="#btnPressEditQuestion" prefHeight="25.0" prefWidth="150.0" text="Edit Question" />
            <Button fx:id="sbCreateExamBtn" contentDisplay="CENTER" mnemonicParsing="false" onAction="#btnPressCreateExam" prefHeight="25.0" prefWidth="150.0" text="Create Exam" />
            <Button fx:id="sbEditExamBtn" contentDisplay="CENTER" mnemonicParsing="false" onAction="#btnPressEditExam" prefHeight="25.0" prefWidth="150.0" text="Edit Exam" />
            <Button fx:id="sbViewReportBtn" contentDisplay="CENTER" mnemonicParsing="false" onAction="#btnPressViewReport" prefHeight="25.0" prefWidth="150.0" text="View Report" />
            <Button fx:id="sbSettingsBtn" contentDisplay="CENTER" mnemonicParsing="false" onAction="#btnPressSettings" prefHeight="25.0" prefWidth="150.0" text="Settings" />
         </children>
      </VBox>
   </children>
</AnchorPane>
