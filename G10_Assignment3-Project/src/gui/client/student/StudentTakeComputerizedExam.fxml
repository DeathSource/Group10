                        <Label fx:id="sbQuestionLbl">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                      <AnchorPane>
                           <children>
                              <RadioButton fx:id="sbAnswer1Rb" layoutY="6.0" mnemonicParsing="false" onAction="#rbPressAnswer1" AnchorPane.leftAnchor="10.0">
